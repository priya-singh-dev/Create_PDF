<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EF7E0D"
    tools:context="de.baumann.pdfcreator.MainActivity">

    <ImageView
        android:id="@+id/image_finger"
        android:src="@drawable/ic_finger_image"
        android:layout_centerInParent="true"
        android:layout_width="100dp"
        android:layout_height="100dp" />

    <TextView
        android:id="@+id/text_finger"
        android:layout_below="@+id/image_finger"
        android:padding="40dp"
        android:text="Place finger on the scanner to verify"
        android:textSize="20sp"
        android:textAlignment="center"
        android:textColor="#f5f5f5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</RelativeLayout>
